        {% block content %}{% endblock content %}
    </main>
</div>
<div class="outer-grey">
    <footer class="page">
        <article>
            <header>
                <h2>
                    <img class="logo" src="{{ asset("bundles/dothivregistrywebsite/images/logo-registry.svg") }}"
                         alt="{% trans %}gmbh.logo.alt{% endtrans %}">
                    <small>{% trans %}gmbh.footer.slogan{% endtrans %}</small>
                </h2>
            </header>
            <section>
                <p>
                    {% trans %}gmbh.footer.name{% endtrans %}<br>
                    {% trans %}gmbh.footer.street{% endtrans %}<br>
                    {% trans %}gmbh.footer.city{% endtrans %}<br>
                    <a href="tel:{% trans %}gmbh.footer.phone{% endtrans %}">{% trans %}
                        gmbh.footer.phone{% endtrans %}</a>
                </p>
            </section>
            <footer>
                <nav>
                    <a href="{{ path('dothiv_registry_page', {'locale': locale, 'page':  'contact'}) }}">{% trans %}
