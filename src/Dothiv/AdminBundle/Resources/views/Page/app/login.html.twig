{% import "DothivAdminBundle:Page:app/form.html.twig" as form %}
<article>
    <form role="form" name="loginForm" novalidate>
        <fieldset>
            <legend>Login</legend>
            <div data-ng-hide="done">
                {{ form.validatedInput("loginForm", "login", "email", "email", "Email address", "Please enter your email address to login.", true) }}
                <nav>
                    <button type="submit" data-ng-click="submit()" data-ng-disabled="loading || loginForm.$invalid" data-ng-class="{loading: loading}">
                        <span data-ng-show="!loading">login</span>
                        <span data-ng-show="loading"><i></i> logging inâ€¦</span>
                    </button>
                </nav>
            </div>
            <div data-ng-show="done" class="done">
                <p>Great. Now check your inbox for the login link.</p>
            </div>
        </fieldset>
    </form>
</article>
