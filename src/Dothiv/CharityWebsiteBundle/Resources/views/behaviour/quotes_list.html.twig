{% use "DothivCharityWebsiteBundle:partials:blocks.html.twig" %}

<div ng-cloak ng-controller="QuoteController" ng-show="visible" class="quotes">
    <div class="row-fluid">
        {% set width = 10 %}
        {{ block('cf_contentBlock') }}
        <nav class="span2">
            <button class="scroll" ng-click="quoteOffset = quoteOffset - 2"><i class="icon-tick-left"></i>
            </button>
            <button class="scroll" ng-cloak ng-click="quoteOffset = quoteOffset + 2"><i class="icon-tick-right"></i>
            </button>
        </nav>
    </div>
    <div class="row-fluid quote-container">
        <div class="span6" ng-repeat="q in (quotes | carousel: quoteOffset | limitTo: 2)">
            <article>
                <blockquote>
                    <img ng-src="{% verbatim %}{{ q.photo.file.url }}{% endverbatim %}" ng-show="q.photo">

                    <p ng-bind-html-unsafe="q.quote"></p>
                </blockquote>
                <footer>
                    <cite ng-bind="q.person"></cite>

                    <p ng-bind-html-unsafe="q.description"></p>
                </footer>
            </article>
        </div>
    </div>
</div>
