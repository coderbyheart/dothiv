{% import "DothivBaseWebsiteBundle:Macros:cf.html.twig" as cf %}
{{ cf.blockstart(block) }}
<div ng-cloak ng-controller="QuoteController" ng-show="visible">
    {{ cf.contentBlock(block, level) }}
    <div class="row-fluid">
        <div class="span12">
            <div class="next2h3 pull-right">
                <button class="scroll" ng-click="quoteOffset = quoteOffset - 3"><i class="icon-tick-left"></i>
                </button>
                <button class="scroll" ng-cloak ng-click="quoteOffset = quoteOffset + 3"><i class="icon-tick-right"></i>
                </button>
            </div>
        </div>
    </div>
    <div class="row-fluid quote-container">
        <div class="span4" ng-repeat="q in (quotes | carousel: quoteOffset | limitTo: 3)">
            <blockquote>
                <article ng-bind-html-unsafe="q.quote"></article>
                <footer>
                    <cite ng-bind="q.person"></cite>
                </footer>
            </blockquote>
        </div>
    </div>
</div>
{{ cf.blockend(block) }}
