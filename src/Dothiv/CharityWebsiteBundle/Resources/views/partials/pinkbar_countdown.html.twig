<!-- adopt for mobile useage -->
<div id="pinbkar" ng-controller="PinkbarControllerCountdown" class="clearfix">
    <div class="pink-bar rightside">

        <div class="pink-bar leftside text-right" ng-style="{ width: percent * 100 + '%' }">
            <button type="button" ng-click="toggle()" btn-checkbox ng-show="percent * 10 > 4" ng-class="{true:'active'}[expanded]">
                <p>
                    {{ 'home.pinkbar.popover.countdown'|trans|markdown }}
                </p>
            </button>
        </div>
        <button type="button" btn-checkbox ng-show="percent * 10 < 4" ng-click="toggle()" ng-class="{true:'active'}[expanded]">
            <p>
                {{ 'home.pinkbar.popover.countdown'|trans|markdown }}
            </p>
        </button>
    </div>
    <div class="pink-bar-popover-handle">
        <div ng-show="expanded" ng-animate="{show: 'pink-bar-popover-show', hide: 'pink-bar-popover-hide'}" class="pink-bar-popover">
            <div class="container">
                <div class="row first">
                    <div class="span6">
                        <div class="row-fluid">
                            <div class="span12">
                                {% set pinkbarintro = content('Block', 'pinkbar.intro') %}
                                <h2>{{ pinkbarintro.title }}</h2>
                                {{ pinkbarintro.text|markdown }}
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span12">
                                <p>{% trans %}home.pinkbar.popover.shareNow{% endtrans %}</p>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span6">
                                <a href="https://twitter.com/share" class="twitter-share-button" data-text="{% trans %}share.twitter.text{% endtrans %}">{% trans %}
                                    share.twitter.button{% endtrans %}</a>
                            </div>
                            <div class="span6 fb-like" data-href="{{ app.request.uri }}" data-layout="button_count" data-action="like" data-show-faces="false" data-share="true"></div>
                        </div>
                    </div>
                    <div class="span6">
                        <iframe ng-show="expanded" ng-src="//www.youtube.com/embed/l3ZHd8qbSpE" allowfullscreen frameborder="0"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr class="bottom-shadow">
