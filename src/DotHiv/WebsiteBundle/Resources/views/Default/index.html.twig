<!DOCTYPE html>
<html lang="en" ng-app="myApp">
    <head>
        <meta charset="utf-8">
        <title>dotHIV</title>
        {% stylesheets 'bundles/website/bootstrap-custom/custom-bootstrap.less' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    </head>
    <body>
        <div ng-view></div>
        <!-- In production use:
            <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular.min.js"></script>
        -->
        <script src="{{ asset('bundles/website/app/lib/angular/angular.js') }}"></script>
        <script src="{{ asset('bundles/website/app/lib/http-auth-interceptor.js') }}"></script>
        <script src="{{ asset('bundles/website/app/lib/ui-bootstrap-tpls-0.3.0.min.js') }}"></script>
        <script type="text/javascript">
            // This script is generally refered to as 'app.js' 
            'use strict';

            // Declare app level module which depends on filters, and services
            angular.module('myApp', ['myApp.filters', 'myApp.services', 'myApp.directives', 'myApp.controllers']).
                config(['$routeProvider', function($routeProvider) {
                    $routeProvider.when('/view1', {templateUrl: '{{ path("dot_hiv_partial_view1") }}', controller: 'MyCtrl1'});
                    $routeProvider.when('/view2', {templateUrl: '/bundles/website/app/partials/partial2.html', controller: 'MyCtrl2'});
                    $routeProvider.otherwise({redirectTo: '/view1'});
                    }]).
                config(['$locationProvider', function($location) {
                    $location.hashPrefix('!');
                    }]).
                config(['$interpolateProvider', function($interpolateProvider) {
                    $interpolateProvider.startSymbol('[[');
                    $interpolateProvider.endSymbol(']]');
                    }]);
        </script>
        <script src="{{ asset('bundles/website/app/js/services.js') }}"></script>
        <script src="{{ asset('bundles/website/app/js/controllers.js') }}"></script>
        <script src="{{ asset('bundles/website/app/js/filters.js') }}"></script>
        <script src="{{ asset('bundles/website/app/js/directives.js') }}"></script>
    </body>
</html>
