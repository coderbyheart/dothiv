<div class="modal-body">
    <div class="row-fluid">
        <div class="span12">
            <button type="button" class="close" ng-click="abort()" aria-hidden="true">&times;</button>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <form novalidate name="loginForm" class="simple-form" ng-class="{clean: loginclean, unclean: !loginclean}">
                <fieldset>
                    <h4>{% trans %}login.form.title{% endtrans %}</h4>
                    <p>{% trans %}login.form.text{% endtrans %}</p>
                
                    <span class="alert alert-error" ng-show="loginerrormsg">[[ loginerrormsg ]]</span>
                
                    <label>{% trans %}login.form.username{% endtrans %}</label> 
                    <input type="text" class="span12" name="username" ng-model="loginData.username" placeholder="{% trans %}login.form.username.placeholder{% endtrans %}" required />
                
                    <label>{% trans %}login.form.password{% endtrans %}</label>
                    <input type="password" class="span12" name="password" ng-model="loginData.password" placeholder="{% trans %}login.form.password.placeholder{% endtrans %}" required />
                    
                    <button type="submit" ng-click="login(loginData)" class="btn btn-success btn-primary" >{% trans %}login.form.submit{% endtrans %}</button>
                </fieldset>
            </form>
        </div>
    
    
        <div class="span6">
            <form novalidate name="registrationForm" class="simple-form" ng-class="{clean: registrationclean, unclean: !registrationclean}">
                <fieldset>
                    <h4>{% trans %}registration.form.title{% endtrans %}</h4>
                    <p>{% trans %}registration.form.text{% endtrans %}</p>
                    
                    <span class="alert alert-error" ng-show="registrationerrormsg">[[ registrationerrormsg ]]</span>
                    
                    <label>{% trans %}registration.form.username.label{% endtrans %}</label>
                    <input type="text" class="span12" name="username" ng-model="registrationData.username" placeholder="{% trans %}registration.form.username.placeholder{% endtrans %}" required />
                    
                    <label>{% trans %}registration.form.email.label{% endtrans %}</label>
                    <input type="email" class="span12" name="email" ng-model="registrationData.email" placeholder="{% trans %}registration.form.email.placeholder{% endtrans %}" required />
                    
                    <label>{% trans %}registration.form.password.label{% endtrans %}</label>
                    <input type="password" class="span12" name="password" ng-model="registrationData.password" placeholder="{% trans %}registration.form.password.placeholder{% endtrans %}" required /><br />
                    <input type="password" class="span12" name="passwordrepeat" placeholder="{% trans %}registration.form.password.placeholderrepeat{% endtrans %}" ng-model="registrationData.passwordRepeat" repeat-password="password" required>
            
                    <button type="submit" ng-click="register(registrationData)" class="btn btn-success btn-primary" >{% trans %}registration.form.submit{% endtrans %}</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>        
